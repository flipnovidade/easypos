<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MegaBurguer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mega_burger_orange_primary</item>
        <item name="colorPrimaryVariant">@color/mega_burger_orange_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mega_burger_orange_primary</item>
        <item name="colorSecondaryVariant">@color/mega_burger_orange_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mega_burger_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/mega_burger_background</item>
        <item name="android:colorBackground">@color/mega_burger_background</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@color/white</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.MegaBurguer" parent="Base.Theme.MegaBurguer" />

    <style name="MegaBurguer.Text.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MegaBurguer.Text.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mega_burger_orange_strong</item>
    </style>

    <style name="MegaBurguer.Text.Subtitle.Gray" parent="MegaBurguer.Text.Subtitle">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="MegaBurguer.Text.Subtitle.White" parent="MegaBurguer.Text.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MegaBurguer.Text.Label" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">16dp</item> </style>

    <style name="MegaBurguer.InputLayout.Menu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="boxStrokeColor">@color/mega_burger_orange_primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="MegaBurguer.InputLayout.Edit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="boxStrokeColor">@color/mega_burger_orange_primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="MegaBurguer.AutoCompleteTextView" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/mega_burger_gray</item>
        <item name="android:backgroundTint">@color/color_default</item>
        <item name="android:popupBackground">@color/color_default</item>
        <item name="android:dropDownHeight">200dp</item>
    </style>

    <style name="MegaBurguer.InputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/mega_burger_gray</item>
    </style>


    <style name="MegaBurguer.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:backgroundTint">@color/mega_burger_orange_primary</item>
    </style>

    <style name="MegaBurguer.Button.Second" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CustomConstraintLayout" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/color_default</item>
    </style>

    <style name="MegaBurguer.Card.Container" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/mega_burger_background</item>
        <item name="strokeColor">@color/mega_burger_gray</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
       <item name="cardElevation">0dp</item>
    </style>

    <style name="MegaBurguer.Card.Highlight" parent="MegaBurguer.Card.Container">
        <item name="strokeColor">@color/mega_burger_orange_primary</item>
    </style>

    <style name="MegaBurguer.Card.Item" parent="MegaBurguer.Card.Container">
        <item name="cardBackgroundColor">@color/color_default</item>
    </style>

    <style name="MegaBurguer.Card.IconContainer" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/mega_burger_orange_icon</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MegaBurguer.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminateTint">@color/mega_burger_orange_primary</item>
    </style>

</resources>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_delete_user"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="18dp"
                    style="@style/MegaBurguer.Card.Highlight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_register_user">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MegaBurguer.Card.IconContainer"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:id="@+id/ic_delete"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/icon_background_selector"
                                android:contentDescription="@string/icon_delete"
                                android:padding="8dp"
                                android:src="@drawable/ic_delete"
                                app:tint="@color/icon_tint_selector" />


                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/text_delete"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/txt_delete_user_title"
                            style="@style/MegaBurguer.Text.Title"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/card_delete"
                            app:layout_constraintTop_toTopOf="@+id/card_delete" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_delete_user_subtitle"
                            style="@style/MegaBurguer.Text.Subtitle.Gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/text_delete"
                            app:layout_constraintTop_toBottomOf="@+id/text_delete" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_manage_menu"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="18dp"
                    style="@style/MegaBurguer.Card.Highlight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_delete_user">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_manage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MegaBurguer.Card.IconContainer"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:id="@+id/ic_manage_menu"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/icon_background_selector"
                                android:contentDescription="@string/icon_manage_menu"
                                android:padding="8dp"
                                android:src="@drawable/ic_menu_book"
                                app:tint="@color/icon_tint_selector" />

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            android:id="@+id/text_manage_menu_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/txt_manage_menu_title"
                            style="@style/MegaBurguer.Text.Title"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/card_manage"
                            app:layout_constraintTop_toTopOf="@+id/card_manage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_add_new_menu_title"
                            style="@style/MegaBurguer.Text.Subtitle.Gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/text_manage_menu_title"
                            app:layout_constraintTop_toBottomOf="@+id/text_manage_menu_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_table"
        android:layout_width="100dp"
        android:layout_height="120dp"
        style="@style/MegaBurguer.Card.Container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_group"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/image_profile_waiter"
                android:src="@drawable/ic_group"
                app:layout_constraintBottom_toTopOf="@+id/text_table_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:tint="@color/mega_burger_gray" />

            <TextView
                android:id="@+id/text_table_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="@style/MegaBurguer.Text.Title"
                android:text="@string/txt_card_tables_waiter"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_table_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_group" />

            <TextView
                android:id="@+id/txt_table_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MegaBurguer.Text.Title"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_table_label"
                tools:text="@string/txt_card_number_tables_waiter" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_change_password"
        style="@style/MegaBurguer.Card.Highlight"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_change"
                style="@style/MegaBurguer.Card.IconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ic_change_password"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/icon_background_selector"
                    android:contentDescription="@string/icon_change_password"
                    android:padding="8dp"
                    android:src="@drawable/ic_group"
                    app:tint="@color/icon_tint_selector" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/text_change_password_title"
                style="@style/MegaBurguer.Text.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                tools:text="Name User"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_change"
                app:layout_constraintTop_toTopOf="@+id/card_change" />

            <TextView
                android:id="@+id/text_user_type"
                style="@style/MegaBurguer.Text.Subtitle.Gray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Type User"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_change_password_title"
                app:layout_constraintTop_toBottomOf="@+id/text_change_password_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>